                            <label>Importo (‚Ç¨)</label>
                            <input type="number" id="txImporto" step="0.01" placeholder="0.00" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Descrizione</label>
                        <input type="text" id="txDescrizione" placeholder="es. Spesa al supermercato" required>
                    </div>
                    <button type="submit" class="btn btn-primary" style="width: 100%; margin-top: 10px;">
                        <span>‚ûï</span>
                        <span>Aggiungi Transazione</span>
                    </button>
                </form>
            </div>
            <div class="card">
                <div class="card-header">
                    <div class="card-title">
                        <span>üìã</span>
                        <span>Tutte le Transazioni</span>
                    </div>
                </div>
                <div id="tutteTransazioni"></div>
            </div>
        </div>
