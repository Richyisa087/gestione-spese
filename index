        </div>
        <!-- Ricorrenti Page -->
        <div id="ricorrenti" class="page">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">
                        <span>üîÑ</span>
                        <span>Transazioni Ricorrenti</span>
                    </div>
                    <button class="btn btn-sm btn-primary" id="btnNuovaRicorrente">+ Nuova Ricorrente</button>
                </div>
                <div id="ricorrentiList"></div>
            </div>
        </div>
        <!-- Statistiche Page -->
        <div id="statistiche" class="page">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">
                        <span>üìä</span>
                        <span>Spese per Categoria</span>
                    </div>
                </div>
                <div class="chart-container">
                    <canvas id="chartCategorie"></canvas>
                </div>
            </div>
            <div class="card">
                <div class="card-header">
                    <div class="card-title">
                        <span>üìà</span>
                        <span>Andamento Annuale</span>
                    </div>
                </div>
                <div class="chart-container">
                    <canvas id="chartAnnuale"></canvas>
                </div>
            </div>
        </div>
        <!-- Impostazioni Page -->
        <div id="impostazioni" class="page">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">
                        <span>‚öôÔ∏è</span>
                        <span>Impostazioni Generali</span>
                    </div>
                </div>
                <div class="setting-item">
                    <div>
                        <div class="setting-label">Notifiche</div>
                        <div class="setting-description">Ricevi avvisi per spese e budget</div>
                    </div>
                    <div class="toggle" id="toggleNotifiche">
                        <div class="toggle-slider"></div>
                    </div>
                </div>
                <div class="setting-item">
                    <div>
                        <div class="setting-label">Sincronizzazione</div>
                        <div class="setting-description">Sincronizza dati tra dispositivi</div>
                    </div>
                    <div class="toggle" id="toggleSync">
                        <div class="toggle-slider"></div>
                    </div>
                </div>
                <div class="setting-item">
                    <div>
                        <div class="setting-label">Dark Mode</div>
                        <div class="setting-description">Tema scuro attivo</div>
                    </div>
                    <div class="toggle active" id="toggleDarkMode">
                        <div class="toggle-slider"></div>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-header">
                    <div class="card-title">
                        <span>üíæ</span>
                        <span>Gestione Dati</span>
                    </div>
                </div>
                <div style="display: flex; gap: 10px;">
                    <button class="btn btn-secondary" id="btnEsporta">Esporta Dati</button>
                    <button class="btn btn-secondary" id="btnImporta">Importa Dati</button>
                    <button class="btn btn-danger" id="btnResetta">Resetta App</button>
                </div>
            </div>
        </div>
