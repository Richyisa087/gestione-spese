    <script type="module">
        import { initializeApp } from 'https://www.gstatic.com/firebasejs/10.7.1/firebase-app.js';
        import { getFirestore, collection, addDoc, deleteDoc, doc, onSnapshot, query, orderBy, updateDoc } from 'https://www.gstatic.com/firebasejs/10.7.1/firebase-firestore.js';
        // Stato dell'app
        let dati = {
            transazioni: [],
            budget: [],
            ricorrenti: []
        };
        let chartAndamento, chartBudget, chartCategorie, chartAnnuale;
        let db;
        let unsubscribe;
        let currentView = 'dashboard'; // Stato della vista attuale

        // --- Funzioni UI ---
        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            const overlay = document.getElementById('overlay');
            sidebar.classList.toggle('open');
            overlay.classList.toggle('show');
        }
        function switchPage(pageId) {
            document.querySelectorAll('.page').forEach(page => {
                page.classList.remove('active');
            });
            document.getElementById(pageId).classList.add('active');
            document.querySelectorAll('.menu-item').forEach(item => {
                item.classList.remove('active');
            });
            // Trova l'elemento del menu corrispondente e lo rendi attivo
            const menuItemMap = {
                'dashboard': 'menuItemDashboard',
                'transazioni': 'menuItemTransazioni',
                'budget': 'menuItemBudget',
                'ricorrenti': 'menuItemRicorrenti',
                'statistiche': 'menuItemStatistiche',
                'impostazioni': 'menuItemImpostazioni'
            };
            if (menuItemMap[pageId]) {
                document.getElementById(menuItemMap[pageId]).classList.add('active');
            }
            currentView = pageId;
            // Chiudi sidebar dopo cambio pagina
            toggleSidebar();
            // Aggiorna la pagina specifica
            switch(pageId) {
                case 'dashboard':
                    aggiornaDashboard();
                    break;
                case 'transazioni':
                    mostraTutteTransazioni();
                    break;
                case 'budget':
                    mostraBudget();
                    break;
                case 'ricorrenti':
                    mostraRicorrenti();
                    break;
                case 'statistiche':
                    aggiornaGrafici();
                    break;
            }
        }
        function openQuickAdd(tipo) {
            document.getElementById('txTipo').value = tipo;
            document.getElementById('txData').value = new Date().toISOString().split('T')[0];
            switchPage('transazioni');
            document.getElementById('txDescrizione').focus();
        }

        // --- Funzioni Firebase ---
        function verificaFirebaseConfig() {
            const savedConfig = localStorage.getItem('firebaseConfig');
            if (savedConfig) {
                const config = JSON.parse(savedConfig);
                document.getElementById('firebaseSetup').style.display = 'none';
                document.getElementById('loadingScreen').style.display = 'block';
                setTimeout(() => inizializzaFirebase(config), 500);
            } else {
                document.getElementById('firebaseSetup').style.display = 'block';
            }
        }
        function salvaConfigFirebase() {
            const apiKey = document.getElementById('apiKey').value.trim();
            const projectId = document.getElementById('projectId').value.trim();
            const appId = document.getElementById('appId').value.trim();
            if (!apiKey || !projectId || !appId) {
                alert('Compila tutti i campi!');
                return;
            }
            const config = {
                apiKey: apiKey,
                authDomain: projectId + '.firebaseapp.com',
                projectId: projectId,
                storageBucket: projectId + '.appspot.com',
                messagingSenderId: '000000000000',
                appId: appId
            };
            localStorage.setItem('firebaseConfig', JSON.stringify(config));
            document.getElementById('firebaseSetup').style.display = 'none';
            document.getElementById('loadingScreen').style.display = 'block';
            setTimeout(() => inizializzaFirebase(config), 500);
        }
        function inizializzaFirebase(config) {
            try {
                const app = initializeApp(config);
                db = getFirestore(app);
                document.getElementById('loadingScreen').style.display = 'none';
                document.getElementById('dashboard').classList.add('active');
                caricaTransazioni();
                document.getElementById('txData').value = new Date().toISOString().split('T')[0];
                aggiornaDashboard();
                inizializzaGrafici();
            } catch (error) {
                console.error('Errore Firebase:', error);
                alert('Errore connessione Firebase. Controlla le credenziali.\n' + error.message);
                document.getElementById('loadingScreen').style.display = 'none';
                document.getElementById('firebaseSetup').style.display = 'block';
                localStorage.removeItem('firebaseConfig');
            }
        }
        function caricaTransazioni() {
            const q = query(collection(db, 'transazioni'), orderBy('data', 'desc'));
            unsubscribe = onSnapshot(q, (snapshot) => {
                dati.transazioni = [];
                snapshot.forEach((doc) => {
                    dati.transazioni.push({
                        id: doc.id,
                        ...doc.data()
                    });
                });
                aggiornaDashboard();
                aggiornaGrafici();
                if (currentView === 'transazioni') {
                    mostraTutteTransazioni();
                }
                aggiornaIndicatoreSincronizzazione(true);
            }, (error) => {
                console.error('Errore sync:', error);
                aggiornaIndicatoreSincronizzazione(false);
            });
        }
        function aggiornaIndicatoreSincronizzazione(connected) {
            const indicator = document.getElementById('syncIndicator');
            indicator.style.background = connected ? '#00d2a0' : '#ff6b6b';
        }

        // --- Funzioni Transazioni ---
        async function aggiungiTransazione(e) {
            e.preventDefault();
            const transazione = {
                data: document.getElementById('txData').value,
                tipo: document.getElementById('txTipo').value,
                categoria: document.getElementById('txCategoria').value,
                importo: parseFloat(document.getElementById('txImporto').value),
                descrizione: document.getElementById('txDescrizione').value,
                dataCreazione: new Date().toISOString()
            };
            if (!transazione.data || !transazione.descrizione || !transazione.importo || transazione.importo <= 0) {
                alert('Compila tutti i campi correttamente!');
                return;
            }
            const btn = e.target.querySelector('button[type="submit"]');
            btn.disabled = true;
            btn.innerHTML = '<span>üîÑ</span> <span>Salvataggio...</span>';
            try {
                await addDoc(collection(db, 'transazioni'), transazione);
                // Reset form
                document.getElementById('formTransazione').reset();
                document.getElementById('txData').value = new Date().toISOString().split('T')[0];
                alert('Transazione aggiunta con successo!');
            } catch (error) {
                console.error('Errore:', error);
                alert('Errore nell\'aggiunta della transazione: ' + error.message);
            } finally {
                btn.disabled = false;
                btn.innerHTML = '<span>‚ûï</span> <span>Aggiungi Transazione</span>';
            }
        }

        // Funzione per mostrare tutte le transazioni
        function mostraTutteTransazioni() {
            const container = document.getElementById('tutteTransazioni');
            if (dati.transazioni.length === 0) {
                container.innerHTML = '<div class="empty-state"><div class="empty-icon">üí≥</div><p>Nessuna transazione</p><p>Aggiungi la tua prima transazione!</p></div>';
                return;
            }
            const ordinate = [...dati.transazioni].sort((a, b) => new Date(b.data) - new Date(a.data));
            container.innerHTML = ordinate.map(tx => `
                <div class="transaction-item">
                    <div class="transaction-icon ${tx.tipo.toLowerCase()}">
                        ${getIconaCategoria(tx.categoria)}
                    </div>
                    <div class="transaction-info">
                        <div class="transaction-title">${tx.descrizione}</div>
                        <div class="transaction-meta">
                            <span>${new Date(tx.data).toLocaleDateString()}</span>
                            <span>${tx.categoria}</span>
                        </div>
                    </div>
                    <div class="transaction-amount ${tx.tipo.toLowerCase()}">
                        ${tx.tipo === 'Entrata' ? '+' : '-'}${tx.importo.toFixed(2)} ‚Ç¨
                    </div>
                    <button class="btn btn-sm btn-danger" onclick="eliminaTransazione('${tx.id}')">Elimina</button>
                </div>
            `).join('');
        }

        // Funzione globale per eliminare una transazione
        window.eliminaTransazione = async function(id) {
            if (confirm('Sei sicuro di voler eliminare questa transazione?')) {
                try {
                    // Rimuovi il documento da Firestore
                    await deleteDoc(doc(db, 'transazioni', id));
                    // L'array dati.transazioni verr√† aggiornato automaticamente dal listener onSnapshot
                    alert('Transazione eliminata!');
                } catch (error) {
                    console.error('Errore:', error);
                    alert('Errore nell\'eliminazione: ' + error.message);
                }
            }
        };

        function getIconaCategoria(categoria) {
            const icone = {
                'üçï Cibo & Ristoranti': 'üçï',
                'üöó Trasporti': 'üöó',
                'üè† Casa': 'üè†',
                'üíä Salute': 'üíä',
                'üé¨ Svago': 'üé¨',
                'üëï Abbigliamento': 'üëï',
                'üìö Istruzione': 'üìö',
                'üíº Lavoro': 'üíº',
                'üéÅ Regali': 'üéÅ',
                'üì± Tecnologia': 'üì±',
                '‚úàÔ∏è Viaggi': '‚úàÔ∏è',
                'üìä Altro': 'üìä'
            };
            return icone[categoria] || 'üìä';
        }

        // --- Funzioni Dashboard ---
        function aggiornaDashboard() {
            // Calcola statistiche
            const oggi = new Date();
            const meseCorrente = oggi.getMonth();
            const annoCorrente = oggi.getFullYear();
            const transazioniMese = dati.transazioni.filter(tx => {
                const data = new Date(tx.data);
                return data.getMonth() === meseCorrente && data.getFullYear() === annoCorrente;
            });
            const entrate = transazioniMese.filter(tx => tx.tipo === 'Entrata');
            const uscite = transazioniMese.filter(tx => tx.tipo === 'Uscita');
            const totaleEntrate = entrate.reduce((sum, tx) => sum + tx.importo, 0);
            const totaleUscite = uscite.reduce((sum, tx) => sum + tx.importo, 0);
            const saldo = totaleEntrate - totaleUscite;
            const risparmio = totaleEntrate * 0.2; // Esempio: 20% di risparmio
            document.getElementById('saldoTotale').textContent = saldo.toFixed(2) + ' ‚Ç¨';
            document.getElementById('entrateMese').textContent = totaleEntrate.toFixed(2) + ' ‚Ç¨';
            document.getElementById('usciteMese').textContent = totaleUscite.toFixed(2) + ' ‚Ç¨';
            document.getElementById('risparmio').textContent = risparmio.toFixed(2) + ' ‚Ç¨';
            // Mostra transazioni recenti
            mostraTransazioniRecenti();
            aggiornaGraficoAndamento();
        }
        function mostraTransazioniRecenti() {
            const container = document.getElementById('transazioniRecenti');
            const recenti = [...dati.transazioni]
                .sort((a, b) => new Date(b.data) - new Date(a.data))
                .slice(0, 5);
            if (recenti.length === 0) {
                container.innerHTML = '<div class="empty-state"><div class="empty-icon">üìã</div><p>Nessuna transazione recente</p></div>';
                return;
            }
            container.innerHTML = recenti.map(tx => `
                <div class="transaction-item">
                    <div class="transaction-icon ${tx.tipo.toLowerCase()}">
                        ${getIconaCategoria(tx.categoria)}
                    </div>
                    <div class="transaction-info">
                        <div class="transaction-title">${tx.descrizione}</div>
                        <div class="transaction-meta">
                            <span>${new Date(tx.data).toLocaleDateString()}</span>
                            <span class="badge badge-${tx.tipo.toLowerCase()}">${tx.tipo}</span>
                        </div>
                    </div>
                    <div class="transaction-amount ${tx.tipo.toLowerCase()}">
                        ${tx.tipo === 'Entrata' ? '+' : '-'}${tx.importo.toFixed(2)} ‚Ç¨
                    </div>
                </div>
            `).join('');
        }

        // --- Funzioni Budget ---
        function aggiungiNuovoBudget() {
            const nome = prompt('Nome del budget:');
            if (nome) {
                const importo = parseFloat(prompt('Importo massimo:'));
                if (importo && importo > 0) {
                    const nuovoBudget = {
                        id: Date.now(),
                        nome: nome,
                        importo: importo,
                        speso: 0
                    };
                    dati.budget.push(nuovoBudget);
                    salvaBudgetSuFirebase(nuovoBudget);
                    mostraBudget();
                }
            }
        }
        async function salvaBudgetSuFirebase(budget) {
            if (db) {
                try {
                    await addDoc(collection(db, 'budget'), budget);
                } catch (error) {
                    console.error('Errore salvataggio budget:', error);
                }
            }
        }
        function mostraBudget() {
            const container = document.getElementById('budgetList');
            if (dati.budget.length === 0) {
                container.innerHTML = '<div class="empty-state"><div class="empty-icon">üéØ</div><p>Nessun budget configurato</p><p>Crea il tuo primo budget!</p></div>';
                return;
            }
            container.innerHTML = dati.budget.map(budget => {
                const percentuale = (budget.speso / budget.importo) * 100;
                const classeProgress = percentuale > 90 ? 'danger' : percentuale > 75 ? 'warning' : '';
                return `
                    <div class="budget-item">
                        <div class="budget-header">
                            <div class="budget-name">${budget.nome}</div>
                            <div class="budget-amount">${budget.speso.toFixed(2)} ‚Ç¨ / ${budget.importo.toFixed(2)} ‚Ç¨</div>
                        </div>
                        <div class="progress-bar">
                            <div class="progress-fill ${classeProgress}" style="width: ${Math.min(percentuale, 100)}%"></div>
                        </div>
                        <div style="text-align: right; margin-top: 5px; font-size: 12px; color: var(--text-muted);">
                            ${percentuale.toFixed(1)}% utilizzato
                        </div>
                    </div>
                `;
            }).join('');
            aggiornaGraficoBudget();
        }

        // --- Funzioni Ricorrenti ---
        function aggiungiRicorrente() {
            const tipo = prompt('Tipo (Entrata/Uscta):');
            const categoria = prompt('Categoria:');
            const importo = parseFloat(prompt('Importo:'));
            const descrizione = prompt('Descrizione:');
            const frequenza = prompt('Frequenza (mensile/settimanale/giornaliera):');
            if (tipo && categoria && importo && descrizione && frequenza) {
                const nuovaRicorrente = {
                    id: Date.now(),
                    tipo: tipo,
                    categoria: categoria,
                    importo: importo,
                    descrizione: descrizione,
                    frequenza: frequenza.toLowerCase(),
                    ultimaEsecuzione: null
                };
                dati.ricorrenti.push(nuovaRicorrente);
                salvaRicorrenteSuFirebase(nuovaRicorrente);
                mostraRicorrenti();
            }
        }
        async function salvaRicorrenteSuFirebase(ricorrente) {
            if (db) {
                try {
                    await addDoc(collection(db, 'ricorrenti'), ricorrente);
                } catch (error) {
                    console.error('Errore salvataggio ricorrente:', error);
                }
            }
        }
        function mostraRicorrenti() {
            const container = document.getElementById('ricorrentiList');
            if (dati.ricorrenti.length === 0) {
                container.innerHTML = '<div class="empty-state"><div class="empty-icon">üîÑ</div><p>Nessuna transazione ricorrente</p><p>Aggiungi una ricorrenza!</p></div>';
                return;
            }
            container.innerHTML = dati.ricorrenti.map(ricorrente => `
                <div class="recurring-item">
                    <div class="recurring-header">
                        <div class="recurring-title">
                            <span>${getIconaCategoria(ricorrente.categoria)}</span>
                            <span>${ricorrente.descrizione}</span>
                        </div>
                        <div class="recurring-frequency">${ricorrente.frequenza}</div>
                    </div>
                    <div style="display: flex; justify-content: space-between; align-items: center;">
                        <div class="transaction-amount ${ricorrente.tipo.toLowerCase()}">
                            ${ricorrente.tipo === 'Entrata' ? '+' : '-'}${ricorrente.importo.toFixed(2)} ‚Ç¨
                        </div>
                        <button class="btn btn-sm btn-danger" onclick="eliminaRicorrente('${ricorrente.id}')">Elimina</button>
                    </div>
                </div>
            `).join('');
        }

        // Funzione globale per eliminare una transazione ricorrente
        window.eliminaRicorrente = async function(id) {
            if (confirm('Sei sicuro di voler eliminare questa transazione ricorrente?')) {
                try {
                    // Rimuovi il documento da Firestore
                    await deleteDoc(doc(db, 'ricorrenti', id));
                    // Aggiorna lo stato locale rimuovendo l'elemento
                    dati.ricorrenti = dati.ricorrenti.filter(r => r.id !== id);
                    mostraRicorrenti();
                    alert('Transazione ricorrente eliminata!');
                } catch (error) {
                    console.error('Errore:', error);
                    alert('Errore nell\'eliminazione: ' + error.message);
                }
            }
        };

        // --- Funzioni Grafici ---
        function inizializzaGrafici() {
            const ctx1 = document.getElementById('chartAndamento').getContext('2d');
            chartAndamento = new Chart(ctx1, {
                type: 'line',
                data: {
                    labels: ['Gen', 'Feb', 'Mar', 'Apr', 'Mag', 'Giu', 'Lug', 'Ago', 'Set', 'Ott', 'Nov', 'Dic'],
                    datasets: [{
                        label: 'Entrate',
                        data: [1200, 1900, 1500, 1800, 2100, 1700, 2200, 2000, 1800, 1950, 2100, 0],
                        borderColor: '#00d2a0',
                        backgroundColor: 'rgba(0, 210, 160, 0.1)',
                        tension: 0.4
                    }, {
                        label: 'Uscite',
                        data: [800, 1100, 900, 1200, 1000, 1300, 1100, 950, 1200, 1100, 1000, 0],
                        borderColor: '#ff6b6b',
                        backgroundColor: 'rgba(255, 107, 107, 0.1)',
                        tension: 0.4
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            labels: {
                                color: '#f5f5f5'
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: {
                                color: 'rgba(255, 255, 255, 0.1)'
                            },
                            ticks: {
                                color: '#a8a8a8'
                            }
                        },
                        x: {
                            grid: {
                                color: 'rgba(255, 255, 255, 0.1)'
                            },
                            ticks: {
                                color: '#a8a8a8'
                            }
                        }
                    }
                }
            });
            const ctx2 = document.getElementById('chartBudget').getContext('2d');
            chartBudget = new Chart(ctx2, {
                type: 'doughnut',
                data: {
                    labels: ['Cibo', 'Trasporti', 'Casa', 'Salute', 'Altro'],
                    datasets: [{
                        data: [35, 20, 25, 10, 10],
                        backgroundColor: [
                            '#6c5ce7',
                            '#00d2a0',
                            '#feca57',
                            '#ff6b6b',
                            '#a8a8a8'
                        ]
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            labels: {
                                color: '#f5f5f5'
                            }
                        }
                    }
                }
            });
            const ctx3 = document.getElementById('chartCategorie').getContext('2d');
            chartCategorie = new Chart(ctx3, {
                type: 'bar',
                data: {
                    labels: ['Cibo', 'Trasporti', 'Casa', 'Salute', 'Svago'],
                    datasets: [{
                        label: 'Spese per Categoria',
                        data: [450, 200, 600, 150, 300],
                        backgroundColor: 'rgba(108, 92, 231, 0.7)'
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            labels: {
                                color: '#f5f5f5'
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: {
                                color: 'rgba(255, 255, 255, 0.1)'
                            },
                            ticks: {
                                color: '#a8a8a8'
                            }
                        },
                        x: {
                            grid: {
                                color: 'rgba(255, 255, 255, 0.1)'
                            },
                            ticks: {
                                color: '#a8a8a8'
                            }
                        }
                    }
                }
            });
            const ctx4 = document.getElementById('chartAnnuale').getContext('2d');
            chartAnnuale = new Chart(ctx4, {
                type: 'line',
                data: {
                    labels: ['Gen', 'Feb', 'Mar', 'Apr', 'Mag', 'Giu', 'Lug', 'Ago', 'Set', 'Ott', 'Nov', 'Dic'],
                    datasets: [{
                        label: 'Saldo Annuale',
                        data: [1000, 1500, 1200, 1800, 2000, 1700, 2200, 2500, 2300, 2400, 2600, 0],
                        borderColor: '#6c5ce7',
                        backgroundColor: 'rgba(108, 92, 231, 0.1)',
                        tension: 0.4,
                        fill: true
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            labels: {
                                color: '#f5f5f5'
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: {
                                color: 'rgba(255, 255, 255, 0.1)'
                            },
                            ticks: {
                                color: '#a8a8a8'
                            }
                        },
                        x: {
                            grid: {
                                color: 'rgba(255, 255, 255, 0.1)'
                            },
                            ticks: {
                                color: '#a8a8a8'
                            }
                        }
                    }
                }
            });
        }
        function aggiornaGraficoAndamento() {
            if (chartAndamento) {
                // Aggiorna i dati del grafico con dati reali
                const oggi = new Date();
                const meseCorrente = oggi.getMonth();
                const annoCorrente = oggi.getFullYear();
                const datiMensili = [];
                for (let mese = 0; mese <= meseCorrente; mese++) {
                    const transazioni = dati.transazioni.filter(tx => {
                        const data = new Date(tx.data);
                        return data.getMonth() === mese && data.getFullYear() === annoCorrente;
                    });
                    const entrate = transazioni.filter(tx => tx.tipo === 'Entrata')
                        .reduce((sum, tx) => sum + tx.importo, 0);
                    const uscite = transazioni.filter(tx => tx.tipo === 'Uscita')
                        .reduce((sum, tx) => sum + tx.importo, 0);
                    datiMensili.push({ entrate, uscite });
                }
                chartAndamento.data.datasets[0].data = datiMensili.map(d => d.entrate);
                chartAndamento.data.datasets[1].data = datiMensili.map(d => d.uscite);
                chartAndamento.update();
            }
        }
        function aggiornaGraficoBudget() {
            if (chartBudget && dati.budget.length > 0) {
                const labels = dati.budget.map(b => b.nome);
                const data = dati.budget.map(b => b.speso);
                const backgroundColor = [
                    '#6c5ce7', '#00d2a0', '#feca57', '#ff6b6b', '#a8a8a8',
                    '#54a0ff', '#5f27cd', '#00d2a0', '#ff9f43', '#10ac84'
                ];
                chartBudget.data.labels = labels;
                chartBudget.data.datasets[0].data = data;
                chartBudget.data.datasets[0].backgroundColor = backgroundColor.slice(0, labels.length);
                chartBudget.update();
            }
        }
        function aggiornaGrafici() {
            aggiornaGraficoAndamento();
            aggiornaGraficoBudget();
        }

        // --- Funzioni Impostazioni ---
        function toggleSetting(element, settingName) {
            element.classList.toggle('active');
            const isActive = element.classList.contains('active');
            localStorage.setItem(`setting_${settingName}`, isActive);
        }
        function esportaDati() {
            const dataStr = JSON.stringify(dati, null, 2);
            const dataUri = 'data:application/json;charset=utf-8,'+ encodeURIComponent(dataStr);
            const exportFileDefaultName = 'finanze_data.json';
            const linkElement = document.createElement('a');
            linkElement.setAttribute('href', dataUri);
            linkElement.setAttribute('download', exportFileDefaultName);
            linkElement.click();
        }
        function importaDati() {
            const input = document.createElement('input');
            input.type = 'file';
            input.accept = '.json';
            input.onchange = e => {
                const file = e.target.files[0];
                const reader = new FileReader();
                reader.onload = function(e) {
                    try {
                        const importedData = JSON.parse(e.target.result);
                        dati = importedData;
                        alert('Dati importati con successo!');
                        aggiornaDashboard();
                    } catch (error) {
                        alert('Errore nell\'importazione dei dati: ' + error.message);
                    }
                };
                reader.readAsText(file);
            };
            input.click();
        }
        function resettaApp() {
            if (confirm('Sei sicuro di voler resettare tutta l\'app? Tutti i dati verranno cancellati.')) {
                localStorage.clear();
                dati = {
                    transazioni: [],
                    budget: [],
                    ricorrenti: []
                };
                if (db) {
                    // Non cancelliamo i dati da Firebase per mantenere la persistenza
                    // Ma resettiamo lo stato locale
                    document.getElementById('firebaseSetup').style.display = 'block';
                    document.getElementById('dashboard').classList.remove('active');
                    document.getElementById('loadingScreen').style.display = 'none';
                    if (unsubscribe) unsubscribe();
                }
                location.reload();
            }
        }
        function usaLocalStorage() {
            document.getElementById('firebaseSetup').style.display = 'none';
            document.getElementById('dashboard').classList.add('active');
            document.getElementById('loadingScreen').style.display = 'none';
            // Usa solo localStorage per la persistenza locale
            caricaDatiLocali();
            aggiornaDashboard();
            inizializzaGrafici();
        }
        function caricaDatiLocali() {
            const saved = localStorage.getItem('finanzeData');
            if (saved) {
                dati = JSON.parse(saved);
            }
        }

        // --- Event Listeners ---
        document.addEventListener('DOMContentLoaded', function() {
            verificaFirebaseConfig();
            // Aggiungi event listeners per i pulsanti e gli elementi interattivi
            document.getElementById('menuBtn').addEventListener('click', toggleSidebar);
            document.getElementById('overlay').addEventListener('click', toggleSidebar);
            document.getElementById('menuItemDashboard').addEventListener('click', () => switchPage('dashboard'));
            document.getElementById('menuItemTransazioni').addEventListener('click', () => switchPage('transazioni'));
            document.getElementById('menuItemBudget').addEventListener('click', () => switchPage('budget'));
            document.getElementById('menuItemRicorrenti').addEventListener('click', () => switchPage('ricorrenti'));
            document.getElementById('menuItemStatistiche').addEventListener('click', () => switchPage('statistiche'));
            document.getElementById('menuItemImpostazioni').addEventListener('click', () => switchPage('impostazioni'));
            document.getElementById('btnSalvaFirebase').addEventListener('click', salvaConfigFirebase);
            document.getElementById('btnUsaLocale').addEventListener('click', usaLocalStorage);
            document.getElementById('quickAddUscita').addEventListener('click', () => openQuickAdd('Uscita'));
            document.getElementById('quickAddEntrata').addEventListener('click', () => openQuickAdd('Entrata'));
            document.getElementById('quickToRicorrenti').addEventListener('click', () => switchPage('ricorrenti'));
            document.getElementById('quickToBudget').addEventListener('click', () => switchPage('budget'));
            document.getElementById('btnVediTutteTransazioni').addEventListener('click', () => switchPage('transazioni'));
            document.getElementById('formTransazione').addEventListener('submit', aggiungiTransazione);
            document.getElementById('btnNuovoBudget').addEventListener('click', aggiungiNuovoBudget);
            document.getElementById('btnNuovaRicorrente').addEventListener('click', aggiungiRicorrente);
            document.getElementById('toggleNotifiche').addEventListener('click', function() { toggleSetting(this, 'notifiche'); });
            document.getElementById('toggleSync').addEventListener('click', function() { toggleSetting(this, 'sync'); });
            document.getElementById('toggleDarkMode').addEventListener('click', function() { toggleSetting(this, 'darkMode'); });
            document.getElementById('btnEsporta').addEventListener('click', esportaDati);
            document.getElementById('btnImporta').addEventListener('click', importaDati);
            document.getElementById('btnResetta').addEventListener('click', resettaApp);
            // Imposta la data odierna come default
            document.getElementById('txData').value = new Date().toISOString().split('T')[0];
        });
    </script>
